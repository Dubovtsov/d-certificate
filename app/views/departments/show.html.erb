<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
<div class="mx-auto w-1/3">
  <div class="mx-auto">
    <%= render @department %>
    </br>
    <div class="flex justify-between items-center mt-3 mb-3">
      <p class="font-bold text-xl">должности отделения</p>
      <%= link_to 'Добавить', new_department_position_path(@department), data: { turbo_frame: 'modal' }, class: "rounded-lg py-1 px-2 bg-blue-600 text-white block font-medium" %>
    </div>
    <div id="positions" data-controller="menu" class="min-w-full">
      <%= render @positions %>
    </div>
  </div>
</div>
