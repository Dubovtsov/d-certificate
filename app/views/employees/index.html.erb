<div class="w-full">

  <div class="flex justify-between items-center">
    <h3 class="font-bold text-2xl">Список сотрудников</h3>
    <div class="flex p-5">
      <%= link_to new_employee_path, data: { turbo_frame: 'modal' }, class: "rounded-lg btn-circle py-2 px-3 bg-green-500 text-white " do %>
        <i class="fa-solid fa-plus font-bold"></i>
      <% end %>
    </div>
  </div>

  <div id="employees" class="min-w-full" data-controller="search">
    <input data-search-target="source" 
                data-action="input->search#filter" 
                type="text" 
                class="search" 
                placeholder="search.." />
    <%= render @employees %>
    <div class="my-5"><%== pagy_nav(@pagy) %></div>
  </div>

  <div class="mb-3"> <!-- Employee import -->
    <%= form_tag import_employees_path, multipart: true do %>
    <div class="col input-group">
      <%= file_field_tag :file, class: "form-control" %>
    </div>
    <%= submit_tag "Импортировать", class: "btn btn-sm default-btn" %>
    <% end %>
  </div> <!-- Employee import -->

  <div class="mb-3"> <!-- PersonalDatum import -->
    <h3>PersonalDatum import</h3>
    <%= form_tag pesonal_data_import_path, multipart: true do %>
    <div class="col input-group">
      <%= file_field_tag :file, class: "form-control" %>
    </div>
    <%= submit_tag "Импортировать", class: "btn btn-sm default-btn" %>
    <% end %>
  </div> <!-- PersonalDatum import -->
</div>
