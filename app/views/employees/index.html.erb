<div class="w-full">

  <div class="flex justify-between border items-center bg-white px-8 py-3 rounded">
    <h3 class="font-bold text-gray-600 text-2xl">Список сотрудников</h3>
    <div class="flex">
      <%= link_to new_employee_path, data: { turbo_frame: 'modal' }, class: "block rounded btn-circle px-3 py-2 bg-indigo-400 text-white" do %>
        <i class="fa-solid fa-plus font-bold"></i>
      <% end %>
    </div>
  </div>

  <div id="employees" data-controller="search">
    <input data-search-target="source" 
                data-action="input->search#filter" 
                type="search" 
                class="search border border-gray-200 rounded mb-6 mt-6" 
                placeholder="Поиск.." />
    <div class="flex flex-wrap bg-white p-8 rounded border rounded h-[60vh] overflow-auto scrollbar">
      <%= render @employees %>
    </div>

    <div class="gradient-scroll border-b border-x rounded-b"></div>

    <% if false%>
      <div class="my-5"><%== pagy_nav(@pagy) %></div>
    <% end %>
  </div>

  <details>
    <summary>import</summary>

    <div class="mb-3"> <!-- Employee import -->
      <%= form_tag import_employees_path, multipart: true do %>
      <div class="col input-group">
        <%= file_field_tag :file, class: "form-control" %>
      </div>
      <%= submit_tag "Импортировать", class: "btn btn-sm default-btn" %>
      <% end %>
    </div> <!-- Employee import -->

    <div class="mb-3"> <!-- PersonalDatum import -->
      <h3>PersonalDatum import</h3>
      <%= form_tag pesonal_data_import_path, multipart: true do %>
      <div class="col input-group">
        <%= file_field_tag :file, class: "form-control" %>
      </div>
      <%= submit_tag "Импортировать", class: "btn btn-sm default-btn" %>
      <% end %>
    </div> <!-- PersonalDatum import -->
  </details>
</div>
