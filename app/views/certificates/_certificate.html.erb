<div id="<%= dom_id certificate %>" class="table-row-group">
  <div class="table-row border-b bg-white border-gray-100">
    <div class="table-cell align-middle px-5 py-3"><%= certificate.request_number %></div>
    <div class="table-cell align-middle break-all px-5 py-3"><%= certificate.request_link %></div>
    <div class="table-cell align-middle px-5 py-3"><%= certificate.end_date %></div>
    <div class="table-cell align-middle px-5 py-3"><%= t("enumerize.certificate.status.#{certificate.status}", locale: :ru) %></div>
    <div class="table-cell align-middle px-5 py-3"><%= certificate.e_service %></div>
    <div class="table-cell align-middle px-5 py-3"><%= check_box_tag 'legal_entity', certificate.legal_entity?, (certificate.legal_entity? ? 'checked' : nil), disabled: true %></div>
    <div class="table-cell px-5 py-3">
    <%#= render partial: "shared/control_buttons", locals: { model: @employee, model_2: certificate } %>
      <div class="flex gap-1">
        <%= link_to edit_employee_certificate_path(@employee, certificate), data: { turbo_frame: 'modal' }, class:"rounded-lg py-2 px-2 bg-blue-100 hover:bg-blue-200 text-blue-400 block font-medium" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
          </svg>
        <% end %>
        <%= link_to [@employee, certificate], data: { turbo_method: :delete, turbo_frame: "_top", turbo_confirm: "Вы уверены?" }, class:"rounded-lg py-2 px-2 bg-blue-100 hover:bg-red-200 text-blue-400 hover:text-red-600 block font-medium" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
