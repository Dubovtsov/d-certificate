<%= form_with(model: [@employee, @certificate], local: true, class: "contents") do |form| %>
  <% if certificate.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(certificate.errors.count, "error") %> prohibited this certificate from being saved:</h2>

      <ul>
        <% certificate.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label "ЮЛ", class:"font-semibold text-sm" %>
    <%= form.check_box :legal_entity, class: "block h-5 w-5" %>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-3 w-1/3">
      <%= form.label "Номер запроса", class:"font-semibold text-sm" %>
      <%= form.text_field :request_number, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
    </div>
    <div class="my-3 w-2/3">
      <%= form.label "Ссылка на запрос", class:"font-semibold text-sm" %>
      <%= form.text_field :request_link, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
    </div>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-3 w-1/3">
      <%= form.label "Дата окончания", class:"font-semibold text-sm" %>
      <%= form.date_field :end_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
    </div>
    <div class="my-3 w-1/3">
      <%= form.label "Статус", class:"font-semibold text-sm" %>
      <%= form.select :status, Certificate.status.values.map{ |s| [I18n.t(s, locale: :ru), s] }, {}, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
    </div>

    <div class="my-3 w-1/3">
      <%= form.label "Сервис", class:"font-semibold text-sm" %>
      <%= form.text_field :e_service, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
    </div>
  </div>

  <div class="my-5" hidden>
    <%= form.label :employee_id %>
    <%= form.text_field :employee_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit "Добавить", class: "rounded-lg py-2 px-3 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
