<%= form_with(model: [employee, power_of_attorney], local: true, class: "contents") do |form| %>
  <% if power_of_attorney.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(power_of_attorney.errors.count, "error") %> prohibited this certificate from being saved:</h2>
      <ul>
        <% power_of_attorney.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label "Название", class:"font-semibold text-sm" %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-3 w-1/3">
      <%= form.label "Дата окончания", class:"font-semibold text-sm" %>
      <%= form.date_field :end_date, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
    </div>
  </div>

  <div class="my-5" hidden>
    <%= form.label :employee_id %>
    <%= form.text_field :employee_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit "Добавить", class: "rounded-lg py-2 px-3 bg-indigo-400 hover:bg-indigo-500 text-white inline-block font-medium cursor-pointer transition" %>
  </div>
<% end %>
