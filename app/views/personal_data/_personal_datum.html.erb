<div id="<%= dom_id personal_datum %>" class="bg-sky-50 rounded-lg p-5 shadow">

  <div class="flex flex-row gap-3">
    <div class="my-1 w-1/3">
      <strong class="font-semibold text-sm text-slate-700">СНИЛС:</strong>
    </div>
    <div class="my-1 w-2/3">
      <%= personal_datum.snils %>
    </div>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-1 w-1/3">
      <strong class="font-semibold text-sm text-slate-700 copytext">ИНН:</strong>
    </div>
    <div class="my-1 w-2/3">
      <%= personal_datum.inn %>
    </div>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-1 w-1/3">
      <strong class="font-semibold text-sm text-slate-700">Паспорт:</strong>
    </div>
    <div class="my-1 w-2/3">
      <%= personal_datum.passport_s %> <%= personal_datum.passport_n %>
    </div>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-1 w-1/3">
      <strong class="font-semibold text-sm text-slate-700">Выдан:</strong>
    </div>
    <div class="my-1 w-2/3">
      <%= personal_datum.issued_by_all %>
    </div>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-1 w-1/3">
      <strong class="font-semibold text-sm text-slate-700">Дата рождения:</strong>
    </div>
    <div class="my-1 w-2/3">
      <%= personal_datum.date_of_birth.strftime("%d.%m.%Y") %>
    </div>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-1 w-1/3">
      <strong class="font-semibold text-sm text-slate-700">Место рождения:</strong>
    </div>
    <div class="my-1 w-2/3">
      <%= personal_datum.place_of_birth %>
    </div>
  </div>

  <div class="flex flex-row gap-3">
    <div class="my-1 w-1/3">
      <strong class="font-semibold text-sm text-slate-700">Телефон:</strong>
    </div>
    <div class="my-1 w-2/3">
      <%= personal_datum.phone_number %>
    </div>
  </div>

  <div class="flex flex-row gap-3 mb-3">
    <div class="my-1 w-1/3">
      <strong class="font-semibold text-sm text-slate-700">Email:</strong>
    </div>
    <div class="my-1 w-2/3">
      <%= personal_datum.email %>
    </div>

  </div>
  <hr class="border-stone-300">
  <div class="italic text-gray-500">edited <%= time_ago_in_words(personal_datum.updated_at) %> ago</div>

  <% if action_name != "show" %>
    <%= link_to "Show this personal datum", personal_datum, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this personal datum', edit_personal_datum_path(personal_datum), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
